<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center;">Edit <%= campground.name %></h1>
    <div style="max-width: 300px; margin: 25px auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="campground[name]" class="form-control" value="<%= campground.name %>">
            </div>
             <div class="form-group">
                <input class="form-control" type="text" name="campground[image]" class="form-control" value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[description]" class="form-control" value="<%= campground.description %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="campground[price]" class="form-control" value="<%= campground.price %>" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go back</a>
    </div>
    
</div>   
<% include ../partials/footer %>