<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center;">Create New Campground</h1>
    <div style="max-width: 300px; margin: 25px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" class="form-control" placeholder="Campground name">
            </div>
             <div class="form-group">
                <input class="form-control" type="text" name="image" class="form-control" placeholder="Image url">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" class="form-control" placeholder="Description">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" class="form-control" placeholder="Price" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go back</a>
    </div>
    
</div>   
<% include ../partials/footer %>